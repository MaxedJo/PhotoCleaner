<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="673.0" prefWidth="881.0" spacing="20.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.maxed.photocleaner.controllers.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="pathToFiles" alignment="CENTER" contentDisplay="CENTER" prefHeight="22.0" prefWidth="482.0" text="Путь к файлам">
      <font>
         <Font size="15.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="473.0" prefWidth="842.0">
      <children>
         <VBox alignment="CENTER" prefHeight="338.0" prefWidth="364.0">
            <children>
               <Label text="Эталонные файлы" />
               <ListView fx:id="filteredList" layoutX="10.0" layoutY="48.0" onMouseClicked="#listClickHandle" prefHeight="340.0" prefWidth="364.0" />
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="338.0" prefWidth="410.0">
            <children>
               <Label text="Файлы для обработки" />
               <ListView fx:id="list" prefHeight="340.0" prefWidth="410.0">
                  <opaqueInsets>
                     <Insets left="30.0" />
                  </opaqueInsets>
               </ListView>
            </children>
            <opaqueInsets>
               <Insets left="30.0" />
            </opaqueInsets>
         </VBox>
      </children>
      <opaqueInsets>
         <Insets left="20.0" />
      </opaqueInsets>
   </HBox>
    <Label fx:id="text" text="Введите путь" />
   <HBox alignment="CENTER">
      <children>
          <TextField fx:id="input" prefHeight="0.0" prefWidth="410.0" />
         <Button fx:id="pathChooser" mnemonicParsing="false" onAction="#onPathChooserClick" text="Обзор">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <VBox alignment="CENTER" prefHeight="100.0" prefWidth="127.0">
            <children>
               <Label text="Эталон" />
               <TextField fx:id="mainExpansive" />
            </children>
         </VBox>
         <VBox alignment="CENTER" prefHeight="100.0" prefWidth="118.0">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin>
            <children>
               <Label text="Обработка" />
               <TextField fx:id="secondaryExpansive" />
            </children>
         </VBox>
      </children>
   </HBox>
   <HBox alignment="CENTER">
      <children>
          <Button fx:id="openButton" onAction="#onOpenButtonClick" text="Открыть" />
         <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteButtonClick" text="Удалить">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
         </Button>
         <Button mnemonicParsing="false" onAction="#onCopyDeleteButtonClick" text="Выделить копии">
            <HBox.margin>
               <Insets left="30.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
</VBox>
